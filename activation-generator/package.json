{
  "name": "nexflow-activation-generator",
  "version": "1.0.0",
  "description": "NEXFLOW 激活码生成器（独立小应用）",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.nexflow.activation-generator",
    "productName": "NEXFLOW 激活码生成器",
    "directories": { "output": "dist" },
    "files": ["main.js", "preload.js", "index.html", "licenseLogic.js"],
    "icon": "../build/icon.png",
    "win": {
      "icon": "../build/icon.ico",
      "target": [{ "target": "nsis", "arch": ["x64"] }]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "shortcutName": "NEXFLOW 激活码生成器",
      "installerLanguages": ["zh_CN", "en_US"]
    }
  }
}
